<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Apache-Axis</display-name>

    <servlet>
        <servlet-name>ProjectDecoders</servlet-name>
        <servlet-class>club.decoders.web.ProjectDecodersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProjectDecoders</servlet-name>
        <url-pattern>/projectdecoders</url-pattern>
    </servlet-mapping>

    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
    <servlet>
        <servlet-name>CookieHandler</servlet-name>
        <servlet-class>club.decoders.web.CookieHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieHandler</servlet-name>
        <url-pattern>/cookieserv</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegServ</servlet-name>
        <servlet-class>club.decoders.web.RegistrationHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServ</servlet-name>
        <url-pattern>/regserv</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServ</servlet-name>
        <servlet-class>club.decoders.web.UserLoginHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServ</servlet-name>
        <url-pattern>/loginserv</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AnnonServ</servlet-name>
        <servlet-class>club.decoders.web.AnnouncementHandlerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnnonServ</servlet-name>
        <url-pattern>/bulletinserv</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ALServ</servlet-name>
        <servlet-class>club.decoders.web.AdminLoginHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ALServ</servlet-name>
        <url-pattern>/alserv</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MemberReg</servlet-name>
        <servlet-class>club.decoders.web.MemberRegistrationHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemberReg</servlet-name>
        <url-pattern>/memreg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MembLogin</servlet-name>
        <servlet-class>club.decoders.web.MemberLoginHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MembLogin</servlet-name>
        <url-pattern>/mlogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProblemSubmission</servlet-name>
        <servlet-class>club.decoders.web.ProblemSubmissionHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MonthlyChallengeLoaderServlet</servlet-name>
        <servlet-class>club.decoders.challengeloaders.MonthlyChallengeLoaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MonthlyChallengeLoaderServlet</servlet-name>
        <url-pattern>/monthlychallengeloader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProblemSubmission</servlet-name>
        <url-pattern>/probsol</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors/error500.jsp</location>
    </error-page>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <url-pattern>/_dcdrad_/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

</web-app>